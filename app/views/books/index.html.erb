<% content_for :add_css do %>
	<%= stylesheet_link_tag 'front_end' %>
<% end %>

<% content_for :content do %>

	<%= render 'front_end/layouts/header' %>

	<section class="container">
		<table class="table table-striped" id="list-item" cellspacing="0" width="100%">
	        <thead>
	            <tr>
	                <th>Title</th>
	                <th>Author</th>
	                <th>Created By</th>
	                <th width="140px">Created Time</th>
	            </tr>
	        </thead>
	        <tfoot>
	            <tr>
	                <th>Title</th>
	                <th>Author</th>
	                <th>Created By</th>
	                <th>Created Time</th>
	            </tr>
	        </tfoot>
	        <tbody style="text-transform: capitalize;">
	        	<% @books.each do |book|%>
			        <tr>
			        	<td>
			        		<a href="<%= book_path(book) %>" class="text-success"><u><%=book.title%></u></a>
			        	</td>
			        	<td><%=book.author%></td>
			        	<td><%=book.user.username%></td>
			        	<td><%=book.created_at%></td>
			        </tr>
		        <% end %>
	        </tbody>
	    </table>
	</section>

	<%= render 'front_end/layouts/footer' %>

<% end %>



