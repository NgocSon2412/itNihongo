<%= form_for(@comment, remote: true) do |f| %>
	<div class="form-group">
    	<%= f.text_area :content, class: 'form-control', id: 'comment_content' ,placeholder: "Compose new comment..." %>
    	<div><%= hidden_field_tag :post_id, post.id %></div>
	</div>
	<%= f.submit "Comment", class: "btn btn-default" %>
<% end %>