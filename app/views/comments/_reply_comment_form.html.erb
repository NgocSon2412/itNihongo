<%= form_for(@comment, remote: true) do |f| %>
	<div class="form-group">
    	<%= f.text_area :content, class: 'form-control reply_content', placeholder: "Compose new comment..." %>
    	<div><%= hidden_field_tag :post_id, post.id %></div>
    	<div><%= hidden_field_tag :parent_id, parent.id %></div>
	</div>
	<%= f.submit "Comment", class: "btn btn-default" %>
<% end %>