	$("#comments-").prepend("<%= j render('comments/comment', comment: @comment, comment2s: @comment2s) %>")
<% else %>
	$("#comments-<%= @comment.parent_id %>").prepend("<%= j render('comments/comment', comment: @comment, comment2s: @comment2s) %>")
<% end %>
